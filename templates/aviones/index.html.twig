{% extends 'base.html.twig' %}

{% block title %}Aviones index{% endblock %}

{% block body %}
    <a class="mt-3 btn btn-success" href="{{ path('aviones_new') }}">Crear nuevo Avi√≥n</a>
    <table class="table table-bordered table-striped table-responsive mt-3">
        <caption>Lista de Aviones</caption>
        <thead class="text-uppercase bg-azul bg-gradient text-white">
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Disponible</th>
                <th>Base</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody class="text-uppercase table-warning">
        {% for avione in aviones %}
            <tr>
                <td class="fw-bold">{{ avione.id }}</td>
                <td>{{ avione.tipo }}</td>
                <td>
                    {% if avione.disponible %}  
                        <span class="btn btn-success"><i class="fas fa-check-circle"></i></span>  
                        
                    {% else %}
                        <span class="btn btn-danger"><i class="fas fa-times-circle"></i></span>
                    {% endif %}
                </td>
                <td>
                    {{ avione.baseavion.nombre }}
                </td>
                <td>
                    <a class="btn btn-primary text-lowercase" href="{{ path('aviones_show', {'id': avione.id}) }}">mostrar</a>
                    <a class="btn btn-warning text-lowercase" href="{{ path('aviones_edit', {'id': avione.id}) }}">editar</a>
                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Registro no encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
