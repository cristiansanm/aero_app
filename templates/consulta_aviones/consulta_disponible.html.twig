{% extends "base.html.twig" %}
{% block title %} Consulta Aviones {% endblock %}
{% block body %}

<form class="mt-3" action={{path('consulta_disponible_aviones')}}>
    <label for="disponible">Disponibilidad: </label>
    <select name="disponible">
        <option value="0">No disponible</option>
        <option value="1">Disponible</option>
    </select>
    <input class="ms-1 btn btn-primary" type="submit" value="Enviar">
</form>

{% if disponibles != null %}
    <table class="table table-bordered table-striped table-responsive mt-3">
        
        <caption>Lista de aviones 
            {% if dispo %}
                Disponibles
            {% else %}
                No Disponibles
            {% endif %}
        </caption>
        <thead class="text-uppercase bg-azul bg-gradient text-white">
            <tr>
                <th>ID</th>
                <th>Tipo</th>
                <th>Base</th>
                <th>Disponible</th>
            </tr>
            </thead>
            <tbody class="text-uppercase table-light">
                {% for avion in disponibles %}
                <tr>
                    <td class="fw-bold">{{avion.id}}</td>
                    <td>{{avion.tipo}}</td>
                    <td>{{avion.baseavion.id}}</td>
                    <td>
                        {% if avion.disponible %}  
                            <span class="btn btn-success"><i class="fas fa-check-circle"></i></span>  
                        
                        {% else %}
                            <span class="btn btn-danger"><i class="fas fa-times-circle"></i></span>
                        {% endif %}
                        
                    </td>
                </tr>   
                {% else %}
                <tr>
                    <td scope="row">No hay resultados</td>
                </tr>
                {% endfor %}
                
                
            </tbody>
    </table>
{% endif %}


{% endblock %}


