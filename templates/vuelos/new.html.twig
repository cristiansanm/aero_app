{% extends 'base.html.twig' %}

{% block title %}Nuevo Vuelo{% endblock %}

{% block body %}
    <h1 class="mt-3">Crear nuevo Vuelo</h1>

    <form action={{path('vuelos_new')}}>
        <div class="row mt-3">
            <label for="fecha">Fecha: </label>
            <input type="date" name="fecha" value="fecha">
        </div>

        <div class="row mt-3">    
            <label for="hora">hora: </label>
            <input type="time" name="hora" value="hora">
        </div>
        
        <div class="row mt-3"> 
            <label for="origen">Origen: </label>
            <select name="origen">
                {% for c in origen %}
                    <option value="{{c.id}}">{{c.nombre}} - {{c.id}}</option>
                {% endfor %}
            </select>
        </div>

        <div class="row mt-3">     
            <label for="destino">Destino:</label>
            <select name="destino">
                {% for c in destino %}
                    <option value="{{c.id}}">{{c.nombre}} - {{c.id}}</option>
                {% endfor %}
            </select>
        </div>

        <div class="row mt-3"> 
            <label for="aviones">Avion:</label>
            <select name="aviones">
                {% for a in aviones %}
                    <option value="{{a.id}}">{{a.tipo}} - {{a.id}}</option>
                {% endfor %}
            </select>
        </div>
        
        <div class="row mt-3">
            <input class="btn btn-warning w-25" type="submit" value="Ir a Personal en Vuelo"/>
        </div>
    </form>

    <a class="btn btn-primary mt-3" href="{{ path('vuelos_index') }}">Volver a la Lista</a>
{% endblock %}
