{% extends 'base.html.twig' %}

{% block title %}Lista de Vuelos{% endblock %}

{% block body %}
    <div class="count float-end mt-3">
        <span class="badge bg-secondary">Nº de Vuelos => {{ pagination.getTotalItemCount }}</span>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="mt-3 btn btn-success mb-2" href="{{ path('vuelos_new') }}">Crear Nuevo Vuelo</a>
    {% endif %}
    <a class="float-end mb-2 mt-3 btn btn-primary me-2" href="{{ path('vuelos_personal_index')}}">Ir al Personal en el Vuelo</a>
    <table class="table table-bordered table-striped table-responsive mt-3">
        <caption>Lista de Vuelos</caption>
        <thead class="text-uppercase bg-azul bg-gradient text-white">
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id', 'v.id') }}</th>
                <th{% if pagination.isSorted('v.fecha') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Fecha', 'v.fecha') }}
                </th>
                <th{% if pagination.isSorted('v.hora') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Hora', 'v.hora') }}
                </th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Avión</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody class="text-uppercase table-light">
        {% for vuelo in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td class="fw-bold">{{ vuelo.id }}</td>
                <td>{{ vuelo.fecha ? vuelo.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ vuelo.hora ? vuelo.hora|date('H:i:s') : '' }}</td>
                <td>{{vuelo.origen.nombre}}</td>
                <td>{{vuelo.destino.nombre}}</td>
                <td>{{vuelo.avion.tipo}}</td>
                <td>
                    <a class="btn btn-primary text-lowercase" href="{{ path('vuelos_show', {'id': vuelo.id}) }}">mostrar</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-warning text-lowercase" href="{{ path('vuelos_edit', {'id': vuelo.id}) }}">editar</a>
                    {% endif %}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Registros no encontrados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>   
{% endblock %}
