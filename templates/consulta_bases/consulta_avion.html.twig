{% extends "base.html.twig" %}
{% block title %} Consulta Bases {% endblock %}
{% block body %}

<form class="mt-3" action={{path('lista_aviones')}}>
    <label for="aviones">Base: </label>
    <select name="aviones">
        {% for base in bases %}
        <option value={{base.id}}>{{base.nombre}} - {{base.id}}</option>
        {% endfor %}
    </select>
    <input class="ms-1 btn btn-primary" type="submit" value="Enviar">
</form>

{% if aviones != null %}
    <table class="table table-bordered table-striped table-responsive mt-3">
        
        <caption>Lista de Aviones en Base {{base1}}</caption>
        <thead class="text-uppercase bg-azul bg-gradient text-white">
            <tr>
                <th>ID</th>
                <th>Tipo</th>
                <th>Disponible</th>
                <th>Acci√≥n</th>
            </tr>
            </thead>
            <tbody class="text-uppercase table-light">
                {% for avion in aviones %}
                <tr>
                    <td>{{avion.id}}</td>
                    <td>{{avion.tipo}}</td>
                    <td>
                        {% if avion.disponible %}  
                        <span class="btn btn-success"><i class="fas fa-check-circle"></i></span>  
                        
                        {% else %}
                        <span class="btn btn-danger"><i class="fas fa-times-circle"></i></span>
                        {% endif %}
                    </td>
                    <td><a class="btn btn-primary text-lowercase" href="{{ path('aviones_show', {'id': avion.id}) }}">mostrar</a></td>
                </tr>   
                {% else %}
                <tr>
                    <td scope="row">No hay resultados</td>
                </tr>
                {% endfor %}
                
                
            </tbody>
    </table>
{% endif %}


{% endblock %}


