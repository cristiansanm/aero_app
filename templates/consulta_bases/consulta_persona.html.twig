{% extends "base.html.twig" %}
{% block title %} Consulta Bases {% endblock %}
{% block body %}

<form class="mt-3" action={{path('lista_bases')}}>
    <label for="personal">Base: </label>
    <select name="personal">
        {% for base in bases %}
        <option value={{base.id}}>{{base.nombre}} - {{base.id}}</option>
        {% endfor %}
    </select>
    <input class="ms-2 btn btn-primary" type="submit" value="Enviar">
</form>

{% if personal != null %}
    <table class="table table-bordered table-striped table-responsive mt-3">
        <caption>Lista de Personal en base {{base1}}</caption>
        <thead class="text-uppercase bg-azul bg-gradient text-white">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Funcion</th>
                <th>Acci√≥n</th>
            </tr>
            </thead>
            <tbody class="text-uppercase table-light">
                {% for persona in personal %}
                <tr>
                    <td class="fw-bold">{{persona.id}}</td>
                    <td>{{persona.nombre}}</td>
                    <td>{{persona.apellido}}</td>
                    <td>{{persona.funcion.nombre}}</td>
                    <td><a class="btn btn-primary text-lowercase" href="{{ path('personal_show', {'id': persona.id}) }}">personal</a></td>
                </tr>   
                {% else %}
                <tr>
                    <td scope="row">No hay resultados</td>
                </tr>
                {% endfor %}
                
            </tbody>
    </table>
{% endif %}


{% endblock %}


