{% extends 'base.html.twig' %}

{% block title %}VuelosPersonal{% endblock %}

{% block body %}
    <h1 clas="mt-3">VuelosPersonal</h1>

    <table class="table table-warning table-bordered table-striped table-responsive mt-3 text-uppercase">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vuelos_personal.id }}</td>
            </tr>
            <tr>
                <th>Id de Vuelo</th>
                <td>{{ vuelos_personal.vueloId.id }}</td>
            </tr>
            <tr>
                <th>Piloto</th>
                <td>{{ vuelos_personal.piloto.apellido }}</td>
            </tr>
            <tr>
                <th>Copiloto</th>
                <td>{{ vuelos_personal.copiloto.apellido }}</td>
            </tr>
            <tr>
                <th>Ingeniero</th>
                <td>{{ vuelos_personal.ingeniero.apellido }}</td>
            </tr>
            <tr>
                <th>Auxiliar</th>
                <td>{{ vuelos_personal.auxiliar.apellido }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('vuelos_personal_index') }}">Volver a la Lista</a>
    {% if is_granted('ROLE_ADMIN') %}
    <br>
    <a class="btn btn-warning mt-2" href="{{ path('vuelos_personal_edit', {'id': vuelos_personal.id}) }}">edtiar</a>

    {{ include('vuelos_personal/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
