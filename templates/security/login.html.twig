{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="row mt-5">    
    <div class="col-5" >
        <div class="col-12 ms-5">
            <img src="img/logo.png" alt="" class="img-fluid mb-2" style="width:10%; height:10%;">
        </div>
        <div class="col-12 ms-5">
            <img src="img/personas.jpg" alt="" class="img-fluid" style="width:60%; height:60%">
        </div>
    </div>
    <div class="col-6 mt-5">    
        <h2>Login</h2>
        <fieldset style="background-color:rgb(228, 193, 40);width: 75%;border-radius: 5px;border-color: #E0E0E0;padding-bottom: 2%;">  
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <label class="ms-5 mt-2" for="inputEmail">Email</label>
                <p><input class="w-75 ms-5" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus></p>
                <label class="ms-5" for="inputPassword">Password</label>
                <p><input class="w-75 ms-5" type="password" name="password" id="inputPassword" class="form-control" required></p>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg bg-azul text-warning ms-5" type="submit">
                    Ingresar
                </button>
            </form>
        </fieldset>
    </div>
</div>    
{% endblock %}
