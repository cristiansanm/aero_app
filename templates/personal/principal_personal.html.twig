{% extends 'base.html.twig' %}

{% block title %}Personal{% endblock %}

{% block body %}
<div class="card mt-3">
    <h5 class="card-header bg-azul text-white">Consulta General</h5>
    <div class="card-body">
        <h5 class="card-title">Información del Personal</h5>
        <p class="card-text">Consulta aquí la información de todas las bases</p>
        <a class="btn btn-warning" href="{{path('personal_index')}}">Ir a lista</a>
    </div>
</div>

<div class="card mt-3">
  <h5 class="card-header bg-azul text-white">Consulta Específica</h5>
  <div class="card-body">
    <h5 class="card-title">Personal por función</h5>
    <p class="card-text">Consulta aquí todo el personal según su función</p>
    <a class="btn btn-warning" href={{path('consulta_personal_funcion')}}>Hacer la consulta</a>
  </div>
</div>

<div class="card mt-3">
  <h5 class="card-header bg-azul text-white">Consulta Específica</h5>
  <div class="card-body">
    <h5 class="card-title">Vuelos de un Personal</h5>
    <p class="card-text">Consulta aquí los últimos o los próximos vuelos de un determinado personal</p>
    <a class="btn btn-warning" href={{path('consulta_personal_fecha')}}>Hacer la consulta</a>
  </div>
</div>
{% endblock %}