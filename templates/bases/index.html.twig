{% extends 'base.html.twig' %}

{% block title %}Listado de Bases{% endblock %}

{% block body %}
    <div class="count float-end mt-3 mb-2">
        <span class="badge bg-secondary">NÂº de Bases => {{ pagination.getTotalItemCount }}</span>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="mt-3 btn btn-success" href="{{ path('bases_new') }}">Crear Nueva Base</a>
    {% endif %}
    <table class="table table-bordered table-striped table-responsive mt-3">
        <caption>Lista de bases</caption>
        <thead class="text-uppercase bg-azul bg-gradient text-white">
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id', 'b.id') }}</th>
                <th{% if pagination.isSorted('b.nombre') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'Nombre', 'b.nombre') }}
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody class="text-uppercase table-light">
        {% for basis in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td class="fw-bold">{{ basis.id }}</td>
                <td>{{ basis.nombre }}</td>
                <td>
                    <a class="btn btn-primary text-lowercase" href="{{ path('bases_show', {'id': basis.id}) }}">Mostrar</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-warning text-lowercase" href="{{ path('bases_edit', {'id': basis.id}) }}">Editar</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Registro no encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div> 
{% endblock %}
